<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowBackground">@color/color_window_background</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:textViewStyle">@style/BaseTextViewStyle</item>
    </style>

    <style name="BaseTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/product_sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>